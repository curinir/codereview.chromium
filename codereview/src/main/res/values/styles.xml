<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ProgressBarActionBar</item>

    </style>

    <style name="ProgressBarActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:progressBarPadding">0dip</item>
        <item name="android:background">#324359</item>
    </style>

    <style name="CodeText">
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
